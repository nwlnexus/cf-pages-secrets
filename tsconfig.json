{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "composite": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
